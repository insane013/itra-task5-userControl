@using Task5.Models.User
@model User

<tr>
    <td>
        <input class="form-check-input" type="checkbox" name="selectedUsers" value="@Model.Email" />
    </td>
    <td>
        <div class="fw-semibold">@Model.UserName</div>
        <div class="text-muted small">@Model.UserPosition</div>
    </td>
    <td>@Model.Email</td>
    <td>
        @if (Model.Status == UserStatus.Active)
        {
            <span class="badge bg-success">Active</span>
        }
        else if (Model.Status == UserStatus.Blocked)
        {
            <span class="badge bg-danger">Blocked</span>
        }
        else
        {
            <span class="badge bg-secondary">@Model.Status</span>
        }
    </td>
    <td>@Model.LastLoginTime.ToString("dd.MM.yyyy HH:mm")</td>
    <td>@Model.RegisterTime.ToString("dd.MM.yyyy HH:mm")</td>
</tr>