@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Логин</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light d-flex align-items-center" style="min-height: 100vh;">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card shadow-sm rounded-4">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4 fw-bold">Sign In to the app</h2>

                        <form method="post" asp-action="Login">
                            <!-- Email -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email: </label>
                                <input type="email" class="form-control" id="email" name="Email" required placeholder="Enter an email" />
                            </div>

                            <!-- Password -->
                            <div class="mb-3">
                                <label for="password" class="form-label">Password: </label>
                                <input type="password" class="form-control" id="password" name="Password" required placeholder="Enter the password" />
                            </div>

                            <!-- Remember me -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe" />
                                    <label class="form-check-label" for="rememberMe">Remember me</label>
                                </div>
                            </div>

                            <!-- Login button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                            </div>
                        </form>

                        <!-- Links -->
                        <div class="text-center mt-4">
                            <p class="mb-1">
                                Don't have an account?
                                <a href="/Account/Register" class="link-primary fw-semibold">Register here</a>
                            </p>
                            <p>
                                <a href="/Account/ForgotPassword" class="link-secondary">Forgot password?</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://kit.fontawesome.com/1fad6a65bc.js" crossorigin="anonymous"></script>
</body>
</html>