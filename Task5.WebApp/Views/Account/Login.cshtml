@using Task5.Models.User
@model UserLoginDto
@{
    var error = TempData["Error"];
}
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm rounded-4">
            <div class="card-body p-4">
                <h2 class="text-center mb-4 fw-bold">Sign In to the app</h2>

                <form method="post" asp-action="Login">
                    <!-- Email -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Email: </label>
                        <input type="email" class="form-control" id="email" name="Email" required placeholder="Enter an email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label for="password" class="form-label">Password: </label>
                        <input type="password" class="form-control" id="password" name="UserPassword" required placeholder="Enter the password" />
                        <span asp-validation-for="UserPassword" class="text-danger"></span>
                    </div>

                    <!-- Remember me -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe" />
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>
                    </div>

                    <!-- Login button -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                    </div>
                </form>

                <!-- Links -->
                <div class="text-center mt-4">
                    <p class="mb-1">
                        Don't have an account?
                        <a href="/Account/Register" class="link-primary fw-semibold">Register here</a>
                    </p>
                    <p>
                        <a href="/Account/ForgotPassword" class="link-secondary">Forgot password?</a>
                    </p>
                </div>
            </div>
        </div>
        @if (error != null)
        {
            @await Html.PartialAsync("_errorDisplay", error)
        }
    </div>
</div>