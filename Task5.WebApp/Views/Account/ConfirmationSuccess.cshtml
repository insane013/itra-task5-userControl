@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg text-center p-4" style="max-width: 500px;">
        <div class="card-body">
            <i class="fa-solid fa-circle-check fa-4x text-success mb-3"></i>
            <h2 class="card-title mb-3">Email Confirmed!</h2>
            <p class="card-text">Your email has been successfully confirmed. You can now log in to your account.</p>
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary mt-3">
                Go to Login
            </a>
        </div>
    </div>
</div>